<!DOCTYPE html>
<html>
  <head>
    <title>Season 16/17 Match Days</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="app">
      <h1>Match Day</h1>
    </header>
    <nav id = "nav">
      <ul id="list">
        <li><a href="http://localhost:3000/home">Home</a></li>
        <li><a href="http://localhost:3000/about">About</a></li>
        <li><a href="http://localhost:3000/matches">MatchDays</a></li>
        <li><a href="http://localhost:3000/teams">Team</a></li>
        <li><a href="http://localhost:3000/search">Search</a></li>
      </ul>
    </nav>

    <div id = "search">
      <%= form_tag(results_search_index_path, method: "get") do %>
        <%= label_tag(:q, "Search for:") %> 
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search") %>
      <% end %>
    </div>

    <%= yield %>
    <footer class="">
        <div class="container">
          <p class="">Copyright &copy; Match Days 16/17</p>
        </div>
    </footer>
  </body>
</html>
