<div>
<h1>Match Days</h1>
<%= paginate @matches %>
</div>

<% if @matches.count == 1 %>
    <h1><%= @matches.name%></h1>
<% else %>
    <h1><%= @matches.name%></h1>
<% end %>

<table>
<tr>
    <th>Match Date</th>
    <th>Match Name</th>
    <th>Home Team</th>
    <th>Away Team</th>
    <th>Match Info</th>
</tr>

<% @matches.each do |match| %>
    <tr>
        <td><p><%= match.date%></p></td>
        <td><p><%= match.name%></p></td>
        <td><p><%= match.homeTeam%></p></td>
        <td><p><%= match.awayTeam%></p></td>
        <td><p><%= link_to "Match details" , match%></p></td>
    </tr>
<% end %>
</table>